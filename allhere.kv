<LogInScreen>:
    name: 'loginscreen'

    MDScreen:
        Image:
            source: "pp4.png"
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1

        MDCard:
            size_hint: None, None
            size: 350, 460
            pos_hint: {"center_x":0.5,"center_y":0.5}
            elevation: 50
            md_bg_color: [23/255, 31/255, 55/255, 0.3]
            padding: 20
            spacing: 30
            orientation: 'vertical'
            MDLabel:
                text: 'Log-in'
                color: 1, 1, 1, 1
                font_style: 'Button'
                font_size: 45
                halign: "center"
                size_hint_y: None
                height: self.texture_size[1]



            MDTextFieldRound:
                id: email_text
                hint_text: 'email'
                icon_right: 'email'
                size_hint_x: None
                width: 220
                font_size: 20
                pos_hint: {"center_x":.5}
                color_activate: [1,1,1,1]

            MDTextFieldRound:
                id: password_text
                hint_text: 'password'
                icon_right: 'eye-off'
                size_hint_x: None
                width: 220
                font_size: 20
                pos_hint: {"center_x":.5}
                color_activate: [1,1,1,1]
                password: True

            MDFillRoundFlatButton:
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                md_bg_color: 102/255, 153/255, 255/255, .6
                text: 'Sing-in'
                pos_hint: {"center_x":.5}
                font_size: 20
                #on_release: my_label.text = my_textinput.text
                #on_release: root.manager.current = 'profile'
                on_release: app.log_in()

            MDFillRoundFlatButton
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                md_bg_color: 102/255, 153/255, 255/255, .6
                text: "Don't have an account? Sing-up"
                pos_hint: {"center_x":.5}
                font_size: 18
                on_release: root.manager.current = 'singupscreen'

            MDFillRoundFlatButton
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                md_bg_color: 102/255, 153/255, 255/255, .6
                text: "Transport Log-in"
                pos_hint: {"center_x":.5}
                font_size: 18
                on_release: root.manager.current = 'specialloginscreen'

            Widget:
                size_hint_y: None
                height: -15

