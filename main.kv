ScreenManager:
    LogInScreen:
    SingUpScreen:
    ProfileScreen:
<LogInScreen>:
    name: 'loginscreen'

    MDScreen:
        Image:
            source: 'Images/recycling.jpg'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1

        MDCard:
            size_hint: None, None
            size: 350, 460
            pos_hint: {"center_x":0.5,"center_y":0.5}
            elevation: 50
            md_bg_color: [0/255, 0/255, 0/255, 0.1]
            padding: 20
            spacing: 30
            orientation: 'vertical'
            MDLabel:
                text: 'Log-in'
                color: 1, 1, 1, 1
                font_style: 'Button'
                font_size: 45
                halign: "center"
                size_hint_y: None
                height: self.texture_size[1]
                padding_y: 15


            MDTextFieldRound:
                id: email_text
                hint_text: 'email'
                icon_right: 'email'
                size_hint_x: None
                width: 220
                font_size: 20
                pos_hint: {"center_x":.5}
                color_activate: [1,1,1,1]
                normal_color: 1, 1, 1, 1

            MDTextFieldRound:
                id: password_text
                hint_text: 'password'
                icon_right: 'eye-off'
                size_hint_x: None
                width: 220
                font_size: 20
                pos_hint: {"center_x":.5}
                color_activate: [1,1,1,1]
                password: True
                normal_color: 1, 1, 1, 1

            MDFillRoundFlatButton:
                theme_text_color: "Custom"
                text_color: 148/255, 148/255, 148/255, 1
                md_bg_color: 1, 1, 1, 1
                text: 'Sing-in'
                pos_hint: {"center_x":.5}
                font_size: 20
                #on_release: my_label.text = my_textinput.text
                #on_release: root.manager.current = 'profile'
                on_release: app.log_in()

            MDFillRoundFlatButton
                theme_text_color: "Custom"
                text_color: 148/255, 148/255, 148/255, 1
                md_bg_color: 1, 1, 1, 1
                text: "Don't have an account? Sing-up"
                pos_hint: {"center_x":.5}
                font_size: 18
                on_release: root.manager.current = 'singupscreen'

            Widget:
                size_hint_y: None
                height: 25

<SingUpScreen>:
    name: 'singupscreen'
    MDScreen:
        md_bg_color: [131/255, 200/255, 65/255, 1]

        MDCard:
            size_hint: None, None
            size: 420, 600
            pos_hint: {"center_x":.5,"center_y":.5}
            elevation: 15
            md_bg_color: [255/255, 255/255, 255/255, 1]
            padding: 20
            spacing: 30
            orientation: 'vertical'
            MDLabel:
                text: 'Sing-up'
                font_style: 'Button'
                font_size: 45
                halign: "center"
                size_hint_y: None
                height: self.texture_size[1]
                padding_y: 15


            MDTextFieldRound:
                id: username_text
                hint_text: 'username'
                icon_right: 'account'
                size_hint_x: None
                width: 220
                font_size: 20
                pos_hint: {"center_x":.5}
                normal_color: 131/255, 200/255, 65/255, 0.5
            MDTextFieldRound:
                id: email_text
                hint_text: 'email'
                icon_right: 'email'
                size_hint_x: None
                width: 220
                font_size: 20
                pos_hint: {"center_x":.5}
                normal_color: 131/255, 200/255, 65/255, 0.5

            MDTextFieldRound:
                id: password_text
                hint_text: 'password'
                icon_right: 'eye-off'
                size_hint_x: None
                width: 220
                font_size: 20
                pos_hint: {"center_x":.5}
                color_activate: [1,1,1,1]
                password: True
                normal_color: 131/255, 200/255, 65/255, 0.5
            MDRoundFlatButton:
                theme_text_color: "Custom"
                text_color: 148/255, 148/255, 148/255, 1
                text: 'Sing-up'
                color: 131/255, 200/255, 65/255, 0.5
                pos_hint: {"center_x":.5}
                font_size: 20
                #on_release: my_label.text = my_textinput.text
                #on_release: root.manager.current = 'profile'
                on_release: app.sing_up()


            MDRoundFlatButton:
                theme_text_color: "Custom"
                text_color: 148/255, 148/255, 148/255, 1
                text: "Already have an account? Sing-in"
                pos_hint: {"center_x":.5}
                font_size: 15
                on_release: root.manager.current = 'loginscreen'

            Widget:
                size_hint_y: None
                height: 60

<ProfileScreen>
    name: 'profile'

    MDBoxLayout:
        orientation: "vertical"
        spacing: 10

        MDToolbar:
            theme_text_color: "Custom"
            text_color: 148/255, 148/255, 148/255, 1
            title: "Easy-Recycling"
            left_action_items: [["menu", lambda x: app.callback(x)]]


        MDFillRoundFlatButton:
            id: button_test
            text: "                                                            "
            pos_hint: {"center_x":.5, "top":1}
            size_hint: (1, .2)
            md_bg_color: 126/255, 203/255, 29/255, 0.5
            halign: 'center'
            multiline: False

        MDFillRoundFlatButton:
            id: button_test2
            text: "Test button"
            pos_hint: {"center_x":.5, "top":1}
            size_hint: (1, .2)
            md_bg_color: 126/255, 203/255, 29/255, 0.5
            halign: 'center'

        MDLabel:
            text: ""
            halign: "center"
